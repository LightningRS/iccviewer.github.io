<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/icon_size"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:id="@+id/hide_taskbar_button_layout" >

            <Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="14.2857dp"
                android:textSize="20dp"
                android:background="@null"
                android:rotation="-90"
                android:id="@+id/hide_taskbar_button" />

    </LinearLayout>

    <Space
        android:id="@+id/space"
        android:layout_height="4dp"
        android:layout_width="match_parent" />

    <ScrollView
        android:id="@+id/taskbar_scrollview"
        android:layout_width="@dimen/icon_size"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:requiresFadingEdge="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="false">

            <Space
                android:id="@+id/whitespace"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <LinearLayout
                android:id="@+id/taskbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="false" />

            <View
                android:id="@+id/divider"
                android:layout_height="1dp"
                android:layout_width="44dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/navbar_buttons"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/button_recents"
            android:layout_height="@dimen/icon_size"
            android:layout_width="match_parent"
            android:src="@drawable/ic_sysbar_recent"
            android:scaleType="center"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/button_home"
            android:layout_height="@dimen/icon_size"
            android:layout_width="match_parent"
            android:src="@drawable/ic_sysbar_home"
            android:scaleType="center"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/button_back"
            android:layout_height="@dimen/icon_size"
            android:layout_width="match_parent"
            android:src="@drawable/ic_sysbar_back"
            android:scaleType="center"
            android:visibility="gone" />

    </LinearLayout>

    <FrameLayout
        android:orientation="vertical"
        android:id="@+id/dashboard_button"
        android:layout_height="40dp"
        android:layout_width="@dimen/icon_size"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <View
                    android:id="@+id/square1"
                    android:layout_width="8dp"
                    android:layout_height="12dp"
                    android:layout_margin="1dp"/>

                <View
                    android:id="@+id/square2"
                    android:layout_width="8dp"
                    android:layout_height="12dp"
                    android:layout_margin="1dp"/>

                <View
                    android:id="@+id/square3"
                    android:layout_width="8dp"
                    android:layout_height="12dp"
                    android:layout_margin="1dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <View
                    android:id="@+id/square4"
                    android:layout_width="8dp"
                    android:layout_height="12dp"
                    android:layout_margin="1dp"/>

                <View
                    android:id="@+id/square5"
                    android:layout_width="8dp"
                    android:layout_height="12dp"
                    android:layout_margin="1dp"/>

                <View
                    android:id="@+id/square6"
                    android:layout_width="8dp"
                    android:layout_height="12dp"
                    android:layout_margin="1dp"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <ImageView
        android:id="@+id/start_button"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size" />

    <Space
        android:id="@+id/space_alt"
        android:layout_height="4dp"
        android:layout_width="match_parent" />

    <LinearLayout android:layout_width="@dimen/icon_size"
                  android:layout_height="24dp"
                  android:layout_gravity="center_horizontal"
                  android:clickable="true"
                  android:id="@+id/hide_taskbar_button_layout_alt" >

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="14.2857dp"
            android:textSize="20dp"
            android:background="@null"
            android:rotation="-90"
            android:id="@+id/hide_taskbar_button_alt" />

    </LinearLayout>

</LinearLayout>
